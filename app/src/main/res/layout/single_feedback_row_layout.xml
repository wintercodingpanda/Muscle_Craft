<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardCornerRadius="30dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mullticolor"
        android:padding="15dp">

        <TextView
            android:id="@+id/feedname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Name"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/feedemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedname"
            android:layout_marginLeft="10dp"
            android:hint="Email"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/feedsubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedemail"
            android:layout_marginLeft="10dp"
            android:hint="Subject"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedsubject"
            android:layout_marginLeft="10dp"
            android:hint="Message"
            android:textColor="#000"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/message"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <!--            <Button-->
            <!--                android:layout_width="173dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginRight="5dp"-->
            <!--                android:text="Edit"-->
            <!--                android:id="@+id/btnedit"/>-->

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Delete" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>