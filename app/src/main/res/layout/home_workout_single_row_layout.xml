<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="33dp">

        <RelativeLayout
            android:id="@+id/cardClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B68FD0D2"
            android:padding="15dp">

            <!--        <de.hdodenhof.circleimageview.CircleImageView-->
            <!--            android:id="@+id/exe_Img"-->
            <!--            android:layout_width="80dp"-->
            <!--            android:layout_height="80dp"-->
            <!--            android:layout_marginStart="20dp"-->
            <!--            android:src="@drawable/bodybuilding" />-->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_Img"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:elevation="5dp"
                app:cardCornerRadius="100dp">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/exe_Img"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:src="@drawable/bodybuilding" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/exe_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:text="Exercise Name"
                android:layout_toRightOf="@id/card_Img"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/exe_Duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30S"
                android:paddingStart="15dp"
                android:layout_below="@id/exe_Name"
                android:layout_toRightOf="@id/card_Img" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>